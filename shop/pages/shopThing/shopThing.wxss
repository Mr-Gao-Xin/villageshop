/* pages/shopThing/shopThing.wxss */
view{
    box-sizing: border-box;
}
.page{
  background-color: #f5f5f5;
}
.bannerImg{
    width: 100%;
    height: 400rpx; 
  }
  /* 底部的定位实现 */
  .shopthing_fixed{
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    padding: 15rpx;
    height: 98rpx;
    width: 100%;
    border-top:2rpx solid #999;
  }
  .shopthing_fixed image{
    width: 40rpx;
    height: 40rpx;
  }
  .shopthing_fixed_title{
    color: #444;
    font-size: 24rpx;
  }
  .shopthing_fixed_left{
    width: 20%;
    text-align: center;
  }
  .shopthing_fixed_pay{
    display: flex;
    width: 50%;
    color: #fff;
    /* background-color: red; */
  }
  .shopthing_fixed_pay view{
    text-align: center;
    font-size: 32rpx;
  }
  .add_shopcart{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #01a33e;
    width: 50%;
    height: 100%;
    text-align: center;
    border-radius: 35rpx 0 0 35rpx;
  }
  .pay_singel{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fa6f1e;
    border-radius: 0 35rpx 35rpx 0;
    width: 50%;
    height: 100%;
    text-align: center;
  }
  .thing_price{
    height: 100rpx;
    color: #fff;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    align-items: center;
  }
  .price_left{
    width:70%;
    background-color: #01a33e;
    height: 100%;
    display: flex;
    justify-content:center;
    align-items: center; 
  }
  .lay_price{
    font-size: 28rpx;
    text-decoration: line-through;
  }
  .price_right{
    width: 30%;
    background-color: #fa6f1e;
    font-size: 26rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .thing_title{
    height: 100rpx;
    color: #333;
    line-height: 100rpx;
    font-size: 32rpx;
  }
  .thing_share{
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .thing_num{
    font-size: 24rpx;
    color:#444;
    margin-left:15rpx;
  }
  .thing_sell{
    color: red;
  }
  .share_btn{
    width: 200rpx;
    background-color:#fa6f1e;
    height: 80rpx;
    border-radius: 40rpx 0 0 40rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
  }
  .thing_msg_tab{
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
 .thing_msg_tab text{
   color: #333;
   font-size: 32rpx;
 }  
 .active{
   border-bottom: 1rpx solid #fa6f1e;
 }
 .leisi_thing{
   font-size: 28rpx;
   color: #444;
   text-align: center;
 }