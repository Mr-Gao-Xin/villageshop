/* pages/shopThing/shopThing.wxss */
page{
  background-color: #f5f5f5;
}
.bannerImg{
    width: 100%;
    height: 400rpx; 
  }
  /* 底部的定位实现 */
  .shopthing_fixed{
    z-index: 9999;
    background-color: #fff;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    padding: 15rpx;
    height: 98rpx;
    width: 100%;
    border-top:2rpx solid #999;
  }
  .shopthing_fixed image{
    width: 40rpx;
    height: 40rpx;
  }
  .shopthing_fixed_title{
    color: #444;
    font-size: 24rpx;
  }
  .shopthing_fixed_left{
    width: 20%;
    text-align: center;
  }
  .shopthing_fixed_pay{
    display: flex;
    width: 50%;
    color: #fff;
    /* background-color: red; */
  }
  .shopthing_fixed_pay view{
    text-align: center;
    font-size: 32rpx;
  }
  .add_shopcart{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #01a33e;
    width: 50%;
    height: 100%;
    text-align: center;
    border-radius: 35rpx 0 0 35rpx;
  }
  .pay_singel{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fa6f1e;
    border-radius: 0 35rpx 35rpx 0;
    width: 50%;
    height: 100%;
    text-align: center;
  }
  /* 价格的样式实现 */
  .thing_price{
    box-sizing: border-box;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
  }
  .price_left{
    box-sizing: border-box;
    padding: 15rpx;
    width: 60%;
    background-color: #01a33e;
    text-align: center;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  .price_left text{
    font-size: 32rpx;
    color: #fff;
  }
  .price_left text.now_price{
    font-size: 38rpx;
  }
  .lay_price{
    text-decoration: line-through;
  }
  .price_right{
    background-color: #fa6f1e;
    padding: 15rpx;width: 40%;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    display: flex;
    align-items: center;
  }
.thing_title{
  height: 70rpx;
  background-color:#fff;
  padding: 15rpx;
  font-size: 38rpx;
  color: #333;
  font-weight: bold;
}
/* 分享 */
.thing_share{
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 15rpx;
  height: 110rpx;
  background-color: #fff;
  margin-bottom: 14rpx;
}
.thing_num{
  color: #444;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.thing_sell{
  color: red;
}
.share_btn{
  font-size: 32rpx;
  background-color: #fa6f1e;
  height: 80rpx;
  width: 210rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx 0 0 40rpx;
}
/* tab切换 */
.thing_msg_tab{
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.thing_msg_tab text{
  font-size: 36rpx;
  color: #333;
}
.thing_msg_tab  .active{
  color: #01a33e;
  border-bottom:1rpx solid #01a33e;
}
.leisi_thing{
  height: 100rpx;
  background-color: #fff;
  font-size: 32rpx;
  color: #444;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll_view{
  width: 100%;
  white-space: nowrap;
}
.scroll_view view{
  background-color: #fff;
  display: inline-block;
  width: 40%;
  height: 300rpx;
  margin: 10rpx;
}
.scroll_view view image{
  width: 100%;
  /* height: 300rpx; */
}