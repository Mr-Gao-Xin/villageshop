/* pages/shopThing/shopThing.wxss */
.page{
  background-color: #f5f5f5;
}
.bannerImg{
    width: 100%;
    height: 400rpx; 
  }

  /* 价格 */
  .thing_price{
    height: 100rpx;
  }
  /* 底部的定位实现 */
  .shopthing_fixed{
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    padding: 15rpx;
    height: 98rpx;
    width: 100%;
    border-top:2rpx solid #999;
  }
  .shopthing_fixed image{
    width: 40rpx;
    height: 40rpx;
  }
  .shopthing_fixed_title{
    color: #444;
    font-size: 24rpx;
  }
  .shopthing_fixed_left{
    width: 20%;
    text-align: center;
  }
  .shopthing_fixed_pay{
    display: flex;
    width: 50%;
    color: #fff;
    /* background-color: red; */
  }
  .shopthing_fixed_pay view{
    text-align: center;
    font-size: 32rpx;
  }
  .add_shopcart{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #01a33e;
    width: 50%;
    height: 100%;
    text-align: center;
    border-radius: 35rpx 0 0 35rpx;
  }
  .pay_singel{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fa6f1e;
    border-radius: 0 35rpx 35rpx 0;
    width: 50%;
    height: 100%;
    text-align: center;
  }